[Unit]
Description=CEC Amplifier Functional for Homebridge IR Amplifier
After=multi-user.target
Wants=homebridge.service

[Service]
Type=simple
ExecStart=/usr/local/bin/cec-amplifier-functional.sh
Restart=always
RestartSec=20
User=root
StandardOutput=journal
StandardError=journal

# Permissions pour acc√©der au device CEC
SupplementaryGroups=video

[Install]
WantedBy=multi-user.target
