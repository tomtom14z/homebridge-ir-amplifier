[Unit]
Description=CEC Listener for Homebridge IR Amplifier (Listen-only mode)
After=multi-user.target
Wants=homebridge.service

[Service]
Type=simple
ExecStart=/usr/local/bin/cec-listener.sh
Restart=always
RestartSec=15
User=root
StandardOutput=journal
StandardError=journal

# Permissions pour acc√©der au device CEC
SupplementaryGroups=video

[Install]
WantedBy=multi-user.target
