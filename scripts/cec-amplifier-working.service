[Unit]
Description=HDMI-CEC Audio Amplifier Working for Homebridge IR Amplifier
After=multi-user.target
Wants=homebridge.service

[Service]
Type=simple
ExecStart=/usr/local/bin/cec-amplifier-working.sh
Restart=always
RestartSec=10
User=root
StandardOutput=journal
StandardError=journal

# Permissions pour acc√©der au device CEC
SupplementaryGroups=video

[Install]
WantedBy=multi-user.target
